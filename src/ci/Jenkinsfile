pipeline {
    agent {
        docker { 
            image 'node:18-alpine'
            // registryUrl 'https://hub.docker.com/_/node'
            // label docker-agent

             }
    }

    stages {
       
        stage('Run App Tests') {
            steps {
                sh '''
                    npm i 
                    CI=true npm run test
                   '''
            }
    }}
    triggers {
        pollSCM('') //Empty quotes tells it to build on a push
    }
    
}